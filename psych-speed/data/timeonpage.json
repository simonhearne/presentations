{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "width": 500,
    "height": 500,
    "padding": 10,
    "background": "transparent",
    "autosize": {
        "type": "fit",
        "contains": "padding"
    },
    "signals": [
        {
            "name": "max_TIMEONPAGE",
            "value": 180
        },
        {
            "name": "max_loadtime",
            "value": 30000,
            "on": [{"events": "*:mouseup", "update": "max_loadtime === 30000 ? 5000 : 30000"}]
        },
        {
            "name": "highlight_timer",
            "value": null,
            "on": [
                {
                    "events": "@legendSymbol:mouseover, @legendLabel:mouseover",
                    "update": "datum.value",
                    "force": true
                },
                {
                    "events": "@legendSymbol:mouseout, @legendLabel:mouseout",
                    "update": "null",
                    "force": true
                }
            ]
        }
    ],
    "data": [
        {
            "name": "source",
            "url": "data/sessionlength.tsv",
            "format": {
                "type": "tsv",
                "parse": {
                    "VALUE": "number",
                    "TIMEONPAGE": "number",
                    "FREQUENCY": "number"
                }
            },
            "transform": [
                {
                    "type": "formula",
                    "expr": "datum.TIMEONPAGE / 1000",
                    "as": "TIMEONPAGE"
                },
                {
                    "type": "filter",
                    "expr": "datum.VALUE < max_loadtime && datum.TIMEONPAGE < max_TIMEONPAGE"
                }
            ]
        },
        {
            "name": "counts",
            "source": "source",
            "transform": [
                {
                    "type": "aggregate",
                    "groupby": ["TIMER"],
                    "ops": ["sum"],
                    "fields": ["FREQUENCY"]
                }
            ]
        }
    ],
    
    "scales": [
        {
            "name": "x",
            "type": "linear",
            "round": true,
            "nice": true,
            "zero": true,
            "domain": {"data": "source", "field": "VALUE"},
            "range": "width",
            "clamp": true
        },
        {
            "name": "y",
            "type": "linear",
            "round": true,
            "nice": true,
            "zero": true,
            "domain": {"data": "source", "field": "TIMEONPAGE"},
            "domainMax": {"signal": "max_TIMEONPAGE"},
            "range": "height",
            "clamp": true
        },
        {
            "name": "color",
            "type": "ordinal",
            "range": {
                "scheme": "set3"
            },
            "domain": {
                "data": "source", "field": "TIMER"
            }
        }
    ],
    
    "axes": [
        {
            "scale": "x",
            "orient": "bottom",
            "tickCount": 5,
            "title": "Speed (ms)"
        },
        {
            "scale": "y",
            "orient": "left",
            "titlePadding": 5,
            "title": "Session Duration (s)"
        }
    ],
    
    "legends": [
        {
            "fill": "color",
            "title": "Timer",
            "orient": "top-right",
            "encode": {
                "symbols": {
                    "name": "legendSymbol",
                    "interactive": true,
                    "update": {
                        "opacity": {
                            "signal": "highlight_timer ? (highlight_timer === datum.value ? 1 : 0.05) : 0.9"
                        }
                    }
                },
                "labels": {
                    "name": "legendLabel",
                    "interactive": true,
                    "update": {
                        "opacity": {
                            "signal": "highlight_timer ? (highlight_timer === datum.value ? 1 : 0.05) : 0.9"
                        }
                    }
                }
            }
        }
    ],
    
    "marks": [
        {
            "type": "group",
            "from": {
                "facet": {
                    "data": "source",
                    "name": "timers",
                    "groupby": [
                        "TIMER"
                    ]
                }
            },
            "marks": [
                {
                    "name": "marks",
                    "type": "symbol",
                    "from": {"data": "timers"},
                    "encode": {
                        "update": {
                            "x": {"scale": "x", "field": "VALUE"},
                            "y": {"scale": "y", "field": "TIMEONPAGE"},
                            "size": {"value": 3},
                            "shape": {"value": "circle"},
                            "fill": {"scale": "color", "field": "TIMER"},
                            "opacity": {
                                "signal": "highlight_timer ? (highlight_timer === datum.TIMER ? 1 : 0.05) : 0.9"
                            }
                        }
                    }
                }
            ]
        }
    ]
}
